	<!--! Make Neutroamine -->
	<RecipeDef>
		<!--? Info -->
		<defName>XI_MK_neutroamine</defName>
		<label>make neutroamine</label>
		<description>Make a batch of neutroamine by extracting it form a fermented mixture of psychoid, alcohol and plants with medicinal properties.</description>
		<jobString>Extracting Neutroamine.</jobString>

		<descriptionHyperlinks>
			<ThingDef>Neutroamine</ThingDef>
		</descriptionHyperlinks>

		<!--? Effects -->
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>

		<!--? Requisites -->
		<researchPrerequisite>XI_R_neutroamine</researchPrerequisite>

		<!--? Work to make -->
		<workAmount>9000</workAmount>  <!-- divide by ~83 -->
    	<workSpeedStat>GeneralLaborSpeed</workSpeedStat>

		<!--? Ingredients -->
		<ingredients>
			<li>
				<filter><thingDefs>
					<li>Beer</li>
				</thingDefs></filter>
				<count>10</count>
			</li>
			<li>
				<filter><thingDefs>
					<li>PsychoidLeaves</li>
				</thingDefs></filter>
				<count>20</count>
			</li>
			<li>
				<filter><thingDefs>
					<li>MedicineHerbal</li>
				</thingDefs></filter>
				<count>2</count>
			</li>
		</ingredients>

		<fixedIngredientFilter>
			<thingDefs>
				<li>Beer</li>
				<li>PsychoidLeaves</li>
				<li>MedicineHerbal</li>
			</thingDefs>
		</fixedIngredientFilter>

		<!--? Product -->
		<products>
			<Neutroamine>4</Neutroamine>
		</products>
	</RecipeDef>


